/* COLORS */
.dark {
    background: rgb(34 26 41);
    color: rgb(175 160 190);
    }

    .light {
        background: rgb(142 120 161);
        color: rgb(34 26 41);
    }

    .dark:hover {
        background: rgb(175 160 190);
        color: rgb(34 26 41);
    }

    .light:hover {
        background: rgb(34 26 41);
        color: rgb(142 120 161);
    }


    /* TOP BUTTON ROW */
    .top-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    /* MIDDLE 4-COLUMN LAYOUT */
    .middle-row {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
    }

    /* HAND BUTTON COLUMNS */
    .hand-left,
    .hand-right {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding-right: 5px;
    }

    /* WAVE COLUMN */
    .wave-col {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .dpad-containter{
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .dpad {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 14px;
    
    }

    .middle-arrows {
        display: flex;
        gap: 14px;
    }

    .dpad-waves {
        display: flex;
        flex-direction: row;
        gap: 14px;
        margin-top: 10px;

    }

    .circle {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center
    }
