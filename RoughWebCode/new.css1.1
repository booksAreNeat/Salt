/* Universal Styling */
/* Background 	rgb(211,211,211)*/
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    /* Ensure padding and border are included in element's total width and height */
    font-family: Montserrat;
}

body {
    background-color: rgb(242, 240, 244);
}

/* Banner Styling */
.banner {
    background-color: rgb(68 54 79);
    padding: 5px;
    width: 100%;
    height: 10vh;
    justify-self: center;
    margin-bottom: 10px;
}

/* Banner Title Styling */
.banner-title {
    color: rgb(175 160 190);
    font-size: 50px;
    flex: 1;
    text-align: center;
}

/*css for two column split*/
.column {
    float: left;
    width: 50%;
}

/* Clear floats after the columns */
.row:after {
    content: "";
    display: table;
    clear: both;
}

/* Content Styling */
#content {
    width: 100%;
    padding: 20px;
    text-align: center;
    color: rgb(34 26 41);
    background-color: rgb(175 160 190);
    margin: 60px auto;
    /* Increased margin to push content further down */
}

